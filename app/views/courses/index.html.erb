<h1>Listing courses</h1>
<table>
  <% @courses.each do |course| %>
    <tr>
      <td class="course_description">
        <dl>
          <dt><%= course.title%></dt>
          <dd><%= truncate(strip_tags(course.description), length: 80) %></dd>
        </dl>
      </td>

      <td class="course_actions">
        <%= link_to 'Add'%>
      </td>
    </tr>
      <% end %>
</table>
<br />
